# Kometa Configuration Environment Variables
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env to git - only commit .env.template

# Server Identification (optional, for reference only)
KOMETA_SERVERNAME=kempfplex1

# Plex Configuration - SERVER SPECIFIC
KOMETA_PLEXURL=http://kempfplex1:32400
KOMETA_PLEXTOKEN=your_plex_token_here

# TMDb (The Movie Database) - REQUIRED
KOMETA_TMDBKEY=your_tmdb_api_key_here

# OMDb (Open Movie Database)
KOMETA_OMDBKEY=your_omdb_api_key_here

# Radarr Configuration
KOMETA_RADARRTOKEN=your_radarr_token_here

# Sonarr Configuration
KOMETA_SONARRTOKEN=your_sonarr_token_here

